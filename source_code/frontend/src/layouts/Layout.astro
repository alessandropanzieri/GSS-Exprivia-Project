---
export interface Props {
    title?: string
    description?: string
}

const {
    title = "Gamma Security Services",
    description = "GSS (Gamma Security Services) is a worldwide military private security company (PMSC)."
} = Astro.props
---

<!DOCTYPE html>
<html lang = "en">
    <head>
        <title>{title}</title>
        <meta charset = "UTF-8"/>
        <meta name = "description" content = {description}/>
        <meta name = "generator" content = {Astro.generator}/>
        <meta name = "viewport" content = "width = device-width"/>
        <link rel = "icon" type = "image/png" href = "/favicon.png"/>
    </head>
    <body>
        <slot/>
    </body>
</html>
