---
import "@fontsource/titillium-web";
---

<form action = "/search/list">
    <input type = "text" name = "search" placeholder = "Search for an employee...">
    <button type = "submit"><img src = "/search.png" alt = "search"></button>
</form>

<style>
    form {
        gap: 10px;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    input {
        width: 100%;
        font-size: 20px;
        border-width: 2px;
        padding-left: 25px;
        border-radius: 90px;
        outline-color: rgb(37, 42, 63);
        font-family: "Titillium Web", sans-serif;
    }

    button {
        border: none;
        cursor: pointer;
        background-color: rgba(255, 255, 255, 0);
    }
</style>
